#include <behaviors.dtsi>
#include "keycodes.h"

&caps_word {
  continue-list = <UNDERSCORE MINUS>;
};

/ {
  behaviors {
    hm: homerow_mods {
      compatible = "zmk,behavior-hold-tap";
      label = "HOMEROW_MODS";
      #binding-cells = <2>;
      tapping-term-ms = <150>;
      quick-tap-ms = <0>;
      flavor = "tap-preferred";
      bindings = <&kp>, <&kp>;
    };
  };
    
  conditional_layers {
    compatible = "zmk,conditional-layers";
    tri_layer {
      if-layers = <_NUMBER _SYMBOL>;
      then-layer = <_ADJUST>;
    };
  };
  
  macros {
    ZMK_MACRO(farr,
      bindings = <KC_EQUAL KC_GT>;
    )
    ZMK_MACRO(tarr,
      bindings = <KC_MINUS KC_GT>;
    )
    ZMK_MACRO(teq,
      bindings = <KC_EQUAL KC_EQUAL KC_EQUAL>;
    )
    ZMK_MACRO(ddash,
      bindings = <KC_MINUS KC_MINUS>;
    )
    ZMK_MACRO(nword,
      bindings = <&macro_press KC_LCTRL>
               , <&macro_tap KC_RIGHT>
               , <&macro_release KC_LCTRL>;
    )
    ZMK_MACRO(pword,
      bindings = <&macro_press KC_LCTRL>
               , <&macro_tap KC_LEFT>
               , <&macro_release KC_LCTRL>;
    )
  };
    
  keymap {
    compatible = "zmk,keymap";
    default_layer {
      bindings = <
//,-----------------------------------------------------.                    ,-----------------------------------------------------.
   XXXX     KC_Q     KC_W     KC_E     KC_R     KC_T                          KC_Y     KC_U     KC_I     KC_O     KC_P     XXXX
//|--------+--------+--------+--------+--------+--------|                    |--------+--------+--------+--------+--------+--------|
   XXXX     GUI_A    ALT_S    CTRL_D   SHFT_F   KC_G                          KC_H     SHFT_J   CTRL_K   ALT_L    GUI_SEMI XXXX
//|--------+--------+--------+--------+--------+--------|                    |--------+--------+--------+--------+--------+--------|
   XXXX     KC_Z     KC_X     KC_C     KC_V     KC_B                          KC_N     KC_M     KC_COMMA KC_DOT   KC_FSLH  XXXX
//|--------+--------+--------+--------+--------+--------+--------|  |--------+--------+--------+--------+--------+--------+--------|
                                       KC_BSPC  NUMBER   NAV_SPC     KC_RET   SYM_TAB  KC_ESC
//                                    `--------------------------'  `--------------------------'
      >;
    };
        
    nav_layer {
      bindings = <
//,-----------------------------------------------------.                    ,-----------------------------------------------------.
   XXXX     XXXX     XXXX     XXXX     XXXX     XXXX                          XXXX     &pword   &nword   XXXX     XXXX     XXXX
//|--------+--------+--------+--------+--------+--------|                    |--------+--------+--------+--------+--------+--------|
   XXXX     KC_LGUI  KC_RALT  KC_LCTRL KC_LSHFT CAPSWRD                       KC_LEFT  KC_DOWN  KC_UP    KC_RIGHT XXXX     XXXX
//|--------+--------+--------+--------+--------+--------|                    |--------+--------+--------+--------+--------+--------|
   XXXX     XXXX     XXXX     XXXX     XXXX     XXXX                          XXXX     XXXX     XXXX     XXXX     XXXX     XXXX
//|--------+--------+--------+--------+--------+--------+--------|  |--------+--------+--------+--------+--------+--------+--------|
                                       ____     ____     ____        ____     ____     ____
//                                    `--------------------------'  `--------------------------'
      >;
    };

    symbol_layer {
      bindings = <
//,-----------------------------------------------------.                    ,-----------------------------------------------------.
   XXXX     KC_EXCL  KC_AT    KC_HASH  KC_DLLR  KC_PRCNT                      KC_CARET KC_AMPS  KC_STAR  &teq     KC_BSLH  XXXX
//|--------+--------+--------+--------+--------+--------|                    |--------+--------+--------+--------+--------+--------|
   XXXX     KC_GRAVE KC_LBKT  KC_RBKT  KC_LPAR  KC_RPAR                       &farr    KC_EQUAL KC_MINUS KC_SQT   KC_DQT   XXXX
//|--------+--------+--------+--------+--------+--------|                    |--------+--------+--------+--------+--------+--------|
   XXXX     KC_TILDE KC_LT    KC_GT    KC_LBRC  KC_RBRC                       &tarr    KC_PLUS  &ddash   KC_PIPE  XXXX     XXXX
//|--------+--------+--------+--------+--------+--------+--------|  |--------+--------+--------+--------+--------+--------+--------|
                                       ____     ____     KC_UNDER    ____     ____     ____
//                                    `--------------------------'  `--------------------------'
      >;
    };

    number_layer {
      bindings = <
//,-----------------------------------------------------.                    ,-----------------------------------------------------.
   XXXX     XXXX     XXXX     XXXX     XXXX     XXXX                          XXXX     KC_N7    KC_N8    KC_N9    XXXX     XXXX
//|--------+--------+--------+--------+--------+--------|                    |--------+--------+--------+--------+--------+--------|
   XXXX     XXXX     XXXX     XXXX     XXXX     XXXX                          KC_N0    KC_N1    KC_N2    KC_N3    XXXX     XXXX
//|--------+--------+--------+--------+--------+--------|                    |--------+--------+--------+--------+--------+--------|
   XXXX     XXXX     XXXX     XXXX     XXXX     XXXX                          XXXX     KC_N4    KC_N5    KC_N6    XXXX     XXXX
//|--------+--------+--------+--------+--------+--------+--------|  |--------+--------+--------+--------+--------+--------+--------|
                                       ____     ____     ____        ____     ____     ____
//                                    `--------------------------'  `--------------------------'
      >;
    };
        
    adjust_layer {
      bindings = <
//,-----------------------------------------------------.                    ,-----------------------------------------------------.
   XXXX     KC_F1    KC_F2    KC_F3    KC_F4    KC_F5                         KC_F6    KC_F7    KC_F8    KC_F9    KC_F10   XXXX
//|--------+--------+--------+--------+--------+--------|                    |--------+--------+--------+--------+--------+--------|
   XXXX     BT_SEL5  BT_SEL4  BT_SEL3  BT_SEL2  BT_SEL1                       XXXX     XXXX     XXXX     XXXX     KC_F11   XXXX
//|--------+--------+--------+--------+--------+--------|                    |--------+--------+--------+--------+--------+--------|
   XXXX     USB_BT   XXXX     XXXX     XXXX     REBOOT                        REBOOT   BT__CLR  XXXX     XXXX     KC_F12   XXXX
//|--------+--------+--------+--------+--------+--------+--------|  |--------+--------+--------+--------+--------+--------+--------|
                                       ____     ____     ____        ____     ____     ____
//                                    `--------------------------'  `--------------------------'
      >;
    };
  };
};
